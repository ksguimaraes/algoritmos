{
  "name": "node-typescript-boilerplate",
  "version": "1.0.0",
  "main": "dist/src/infrastructure/cli/main.js",
  "scripts": {
    "remove-dist": "rimraf dist",
    "replace-paths": "tsconfig-replace-paths --project tsconfig.json",
    "build": "npm run remove-dist && tsc --project tsconfig.json && npm run replace-paths",
    "start": "node . ",
    "start:dev": "ts-node-dev -r dotenv/config -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules src/infrastructure/cli/main.ts --trace-warnings",
    "test": "jest",
    "test:unit": "jest --setupFiles=dotenv/config --testMatch \"<rootDir>/tests/**/*.unit.test.[jt]s\"",
    "test:integration": "jest --setupFiles=dotenv/config --testMatch \"<rootDir>/tests/**/*.integration.test.[jt]s\"",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "rimraf": "^6.0.1",
    "tsconfig-replace-paths": "^0.0.14"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "dotenv": "^17.2.1",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}